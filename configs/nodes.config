process {   
    withLabel: minimap2         { cpus = 24 ; memory = '32 GB' }
    withLabel: plasflow         { cpus = 18 ; memory = '24 GB' }
    withLabel: seqkit           { cpus = 4 ; memory = '8 GB'  }
    withLabel: ggplot2          { cpus = 2 ; memory = '6 GB'  }
